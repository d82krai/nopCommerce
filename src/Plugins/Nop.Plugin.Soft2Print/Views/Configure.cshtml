@{
    Layout = "_ConfigurePlugin";
}

@model ViewModel.Configure
@inject Nop.Core.IWebHelper webHelper

<form asp-controller="@Nop.Plugin.Soft2Print.Controllers.Soft2Print_AdminController.ControllerName" asp-action="Configure" method="post">

    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                @Html.Raw($"All translation related to this plugin (except for the help) can be translated. <br />You can do this by going to \"{T("Admin.Configuration").Text} >> {T("Admin.Configuration.Languages").Text} >> {T("Admin.Common.Edit").Text} > {T("Admin.Configuration.Languages.Resources").Text} \"<br /> Here you enter 'soft2print' in the {T("Admin.Configuration.Languages.Resources.Searchresourcename").Text}.<br /><br />Click the link below to generate an xml that contains all the missing '{T("Admin.Configuration.Languages.Resources").Text}', that is ready to import but in english.")
                <br /><br />
                <a target="_blank" href="@Url.RouteUrl(Nop.Plugin.Soft2Print.RouteProvider.TranslationXML)">Click Here</a>
            </div>
        </div>
    </div>

    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                @Html.Raw(T(ResourceCollection.Key.Admin.API.Header).Text)
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="API_Url" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="API_Url" />
                        <span asp-validation-for="API_Url"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                @Html.Raw(T(ResourceCollection.Key.Admin.Account.Header).Text)
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="Account_Key" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="Account_Key" />
                        <span asp-validation-for="Account_Key"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="Account_Secret" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="Account_Secret" />
                        <span asp-validation-for="Account_Secret"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                @Html.Raw(T(ResourceCollection.Key.Admin.ThemeList.Header).Text)
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="ThemeList_GetUnknownWidgetZoneWarning" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ThemeList_GetUnknownWidgetZoneWarning" />
                        <span asp-validation-for="ThemeList_GetUnknownWidgetZoneWarning"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="ThemeList_WidgetZone" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ThemeList_WidgetZone" />
                        <span asp-validation-for="ThemeList_WidgetZone"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                @Html.Raw(T(ResourceCollection.Key.Admin.OpenModuleButton.General.Header).Text)
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="OpenModuleButton_General_GetUnknownWidgetZoneWarning" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="OpenModuleButton_General_GetUnknownWidgetZoneWarning" />
                        <span asp-validation-for="OpenModuleButton_General_GetUnknownWidgetZoneWarning"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                @Html.Raw(T(ResourceCollection.Key.Admin.OpenModuleButton.ProductBox.Header).Text)
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="OpenModuleButton_ProductBox_WidgetZone" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="OpenModuleButton_ProductBox_WidgetZone" />
                        <span asp-validation-for="OpenModuleButton_ProductBox_WidgetZone"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                @Html.Raw(T(ResourceCollection.Key.Admin.OpenModuleButton.ProductDetails.Header).Text)
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="OpenModuleButton_ProductDetails_WidgetZone" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="OpenModuleButton_ProductDetails_WidgetZone" />
                        <span asp-validation-for="OpenModuleButton_ProductDetails_WidgetZone"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                @Html.Raw(T(ResourceCollection.Key.Admin.ViewModule.Header).Text)
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="ViewModule_OpenModeValues" />
                    </div>
                    <div class="col-md-9">
                        <nop-select asp-for="ViewModule_OpenMode" asp-items="Model.ViewModule_OpenModeValues" />
                        <span asp-validation-for="ViewModule_OpenMode"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-primary" value="@T("Admin.Common.Save")" />
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>